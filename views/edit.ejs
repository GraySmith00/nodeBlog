<% include partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            
            <h1>Edit "<%= post.title %>"</h1>
            <form action="/posts/<%= post._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" name="post[title]" class="form-control" value="<%= post.title %>">
                </div>
                <div class="form-group">
                    <input type="text" name="post[image]" class="form-control" value="<%= post.image %>">
                </div>
                <div class="form-group">
                    <textarea name="post[body]" rows="10" class="form-control"><%= post.body %></textarea>
                </div>                
                <div class="form-group">
                    <button class="btn btn-outline-primary btn-block">Submit</button>
                </div>
            </form>     
            
            <a href="/posts/<%= post._id %>">Back to Post</a>
            
            <br/>
            
            <form action="/posts/<%= post._id %>?_method=DELETE" method="POST">
                <button class="btn btn-outline-danger">Delete Post</button>
            </form>
            
        </div>
    </div>
</div>



<% include partials/footer %>